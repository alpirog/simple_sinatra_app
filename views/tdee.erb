<div class="column is-half is-offset-one-quarter">
  <section class="section">
    <p class="message is-danger" style="background-color: #FF4500; color: white;"><%= @input_error %></p>
    <div class="container">
      <form action="/tdee" method="post">
        <div class="control">
          <label class="label">Gender</label>
          <label class="radio">
            <input type="radio" name="gender" value="1" <%= @checked if params[:gender] == "1" %>>Male</label>
          <label class="radio">
            <input type="radio" name="gender" value="2" <%= @checked if params[:gender] == "2" %>>Female</label>
        </div>

        <div class="field vert_padded">
          <label class="label">Height</label>
          <div class="control">
            <input class="input" type="text" name="height" placeholder="Centimeters" value="<%=@height%>">
          </div>
        </div>
        <div class="field">
          <label class="label">Weight</label>
          <div class="control">
            <input class="input" type="text" name="weight" placeholder="Kilograms" value="<%=@weight%>">
          </div>
        </div>
        <div class="field">
          <label class="label">Age</label>
          <div class="control">
            <input class="input" type="text" name="age" placeholder="Age" value="<%=@age%>">
          </div>
        </div>

        <label class="label">Select Your Activity Level</label>
        <div class="select">
          <select name="activity">
            <option value="sedentary">Sedentary (little or no exercise)</option>
            <option value="light">Lightly (light exercise 1-3 days/week)</option>
            <option value="moderate">Moderately (moderate exercise/sports 3-5 days/week)</option>
            <option value="active">Very active (hard exercise/sports 6-7 days/week)</option>
            <option value="extreme">Extremely active (training twice a day)</option>
          </select>
        </div>
        <div class="vert_padded">
            <input class="button is-primary" type="submit" value="Calculate">
        </div>
      </form>
    </div>
  </section>
</div>

<%= params.inspect %>
