<div class="column is-half is-offset-one-quarter">

  <div class="">

  </div>
  <form action="/tdee" method="post">
    <div class="control">
      <label class="label">Gender</label>
      <label class="radio">
        <input type="radio" name="gender" value="male">Male</label>
      <label class="radio">
        <input type="radio" name="gender" value="female">Female</label>
    </div>

    <div class="field vert_padded">
      <label class="label">Height</label>
      <div class="control">
        <input class="input" type="text" name="height" placeholder="Cantemeters">
      </div>
    </div>
    <div class="field">
      <label class="label">Weight</label>
      <div class="control">
        <input class="input" type="text" name="weight" placeholder="Kilograms">
      </div>
    </div>
    <div class="field">
      <label class="label">Age</label>
      <div class="control">
        <input class="input" type="text" name="age" placeholder="Age">
      </div>
    </div>

    <label class="label">Select Your Activity Level</label>
    <div class="select">
      <select name="activity">
        <option value="s">Sedentary (little or no exercise)</option>
        <option value="l">Lightly (light exercise 1-3 days/week)</option>
        <option value="m">Moderately (moderate exercise/sports 3-5 days/week)</option>
        <option value="v">Very active (hard exercise/sports 6-7 days/week)</option>
        <option value="x">Extremely active (training twice a day)</option>
      </select>
    </div>
    <div class="vert_padded">
        <input class="button is-primary" type="submit" value="Calculate">
    </div>
  </form>
</div>
